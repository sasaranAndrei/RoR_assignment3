%h1.page-title Order details
%h2= @order.delivery_date
%h3= @order.address
- products = Product.find(@order.products)
.cart-container
  - products.each do |product|
    .cart-box
      %h2= product.title
      %h3= product.description
      %h4= "#{ product.price.to_s } $"
%h4= "Total cost: #{ total_price(products) } $"
%h2= link_to 'Go to Home page', root_path
