.authentication
  %nav.authentication-nav
    %ul.authentication-ul
      - if logged_in?
        %li= link_to "Log out", logout_path, class: 'header-btn btn-logout', method: :delete
        %li= link_to "My profile", current_user, class: 'header-btn'
      - else
        %li= link_to "Log in", login_path, class: 'header-btn btn-login'
      %li= link_to "Sign up", signup_path, class: 'header-btn btn-signup'
